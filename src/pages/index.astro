import Card from '../components/Card.astro';
import '../styles/main.css';

const pageTitle = "Jim's Personal Space"
---

<Layout title={pageTitle}>
    <div class="container">
        <h1 class="page-title">Welcome to <span class="text-gradient">Jim's Corner</span></h1>
        <p class="card-container">
            Hello! I'm <strong>Jim</strong>, a computer science student passionate about programming and photography. This is where I document my projects, life insights, and photographic works üìù
        </p>

        <ul role="list" class="content-grid">
            <Card
                href="/blog"
                title="Tech Blog"
                body="Sharing programming experience, study notes and technical insights"
            />
            <Card
                href="/plog"
                title="Photography Journal"
                body="Capturing life moments, sharing photography collections üì∏"
            />
            <Card
                href="/projects"
                title="Project Showcase"
                body="Documenting interesting projects I've participated in"
            />
            <Card
                href="/about"
                title="About Me"
                body="Learn more about my story and experiences"
            />
            <Card
                href="/contact"
                title="Contact Me"
                body="Feel free to reach out with any questions or ideas üëã"
            />
        </ul>
    </div>
</Layout>

